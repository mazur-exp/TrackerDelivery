        id: 1,
        name: "Warung Bali Asli",
        nextCheckTime: new Date(Date.now() + 13 * 60 * 1000), // 13 minutes from now
        lastCheck: new Date(Date.now() - 2 * 60 * 1000), // 2 minutes ago
