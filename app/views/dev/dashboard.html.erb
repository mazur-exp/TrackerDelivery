        lastCheck: new Date(Date.now() - 23 * 60 * 1000), // 23 minutes ago
        nextCheckElementId: 'nextCheck3',
        lastCheckElementId: 'lastCheck3'
      }
    ];

    function showTab(tabName) {
      // Hide all tabs
      document.getElementById('stores-tab').classList.add('hidden');
      document.getElementById('history-tab').classList.add('hidden');
      document.getElementById('notifications-tab').classList.add('hidden');
      
      // Show selected tab
      document.getElementById(tabName + '-tab').classList.remove('hidden');
      
      // Update tab buttons
      document.querySelectorAll('.tab-btn').forEach(btn => {
        btn.classList.remove('text-green-600', 'border-b-2', 'border-green-600');
        btn.classList.add('text-gray-500');
      });
      
      document.querySelector(`[data-tab="${tabName}"]`).classList.add('text-green-600', 'border-b-2', 'border-green-600');
      document.querySelector(`[data-tab="${tabName}"]`).classList.remove('text-gray-500');
    }

    async function handleRefresh() {
      console.log('handleRefresh called');
      if (isRefreshing) return;
      
      isRefreshing = true;
      const btn = document.getElementById('refreshBtn');
      const icon = document.getElementById('refreshIcon');
      const text = document.getElementById('refreshText');
      
      btn.disabled = true;
      icon.classList.add('animate-spin');
      text.textContent = 'Checking...';
      
      // Simulate API call
      await new Promise(resolve => setTimeout(resolve, 2000));
      
      // Update all stores with new check times and last check
      const now = new Date();
      stores.forEach(store => {
        store.lastCheck = now;
        store.nextCheckTime = new Date(now.getTime() + 15 * 60 * 1000); // 15 minutes from now
        
        // Update UI elements immediately
        const nextCheckElement = document.getElementById(store.nextCheckElementId);
        const lastCheckElement = document.getElementById(store.lastCheckElementId);
        
        if (nextCheckElement) {
          nextCheckElement.textContent = formatTimeRemaining(store.nextCheckTime);
        }
        if (lastCheckElement) {
          lastCheckElement.textContent = formatTimeAgo(store.lastCheck);
        }
      });
      
      // Reset UI
      btn.disabled = false;
      icon.classList.remove('animate-spin');
      text.textContent = 'Refresh';
      isRefreshing = false;
    }

    function formatTimeRemaining(date) {
      const now = new Date();
      const diff = Math.max(0, date.getTime() - now.getTime());
      const minutes = Math.floor(diff / 60000);
      const seconds = Math.floor((diff % 60000) / 1000);
      return `${minutes}:${seconds.toString().padStart(2, '0')}`;
    }

    function formatTimeAgo(date) {
      const now = new Date();
      const diff = now.getTime() - date.getTime();
      const minutes = Math.floor(diff / 60000);
      if (minutes < 1) return "Just now";
      if (minutes === 1) return "1 min ago";
      return `${minutes} min ago`;
    }

    function updateCountdowns() {
      stores.forEach(store => {
        const nextCheckElement = document.getElementById(store.nextCheckElementId);
        const lastCheckElement = document.getElementById(store.lastCheckElementId);
        
        if (nextCheckElement) {
          // Decrease next check time by 1 second
          store.nextCheckTime = new Date(store.nextCheckTime.getTime() - 1000);
          
          // If time reaches 0, reset to 15 minutes and update last check
          if (store.nextCheckTime.getTime() <= Date.now()) {
            store.nextCheckTime = new Date(Date.now() + 15 * 60 * 1000);
            store.lastCheck = new Date();
          }
          
          nextCheckElement.textContent = formatTimeRemaining(store.nextCheckTime);
        }
        
        if (lastCheckElement) {
          lastCheckElement.textContent = formatTimeAgo(store.lastCheck);
        }
      });
    }

    // Start countdown timer
    setInterval(updateCountdowns, 1000);
    
    // Initialize timers immediately
    updateCountdowns();
    
    // Add event listener for refresh button
    document.addEventListener('DOMContentLoaded', function() {
      const refreshBtn = document.getElementById('refreshBtn');
      if (refreshBtn) {
        refreshBtn.addEventListener('click', handleRefresh);
        console.log('Refresh button event listener added');
      } else {
        console.error('Refresh button not found');
      }
    });
